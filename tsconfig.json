{
  "compilerOptions": {
    "module": "ES6",
    "moduleResolution": "Node",
    "target": "ES6",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "declaration": true,
    "noEmit": false,
    "noEmitOnError": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
